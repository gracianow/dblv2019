@{
    ViewData["Title"] = "Cotação";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@Scripts.Render("https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js")

<script type="text/javascript">$("#txtFoneFixo").mask("(00) 0000-0009");</script>

<script type="text/javascript">$("#txtCelular").mask("(00) 00000-0009");</script>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#modalMsg').modal('show');
        });

    </script>
}


    <!--==========================
      Contact Section
    ============================-->
<section id="contact" class="section-bg wow fadeInUp">
    <div class="container">
        <br /><br />
        <div class="section-header">
            <h3>Contato</h3>
            <p>Nossos canais de comunicação estão à sua disposição, Cliente!</p>
        </div>

        <div class="row contact-info">

            <div class="col-md-4">
                <div class="contact-address">
                    <i class="ion-ios-location-outline"></i>
                    <h3>Endereço</h3>
                    <address>
                        R. Elias Juvenal de Mello, 1400 Torre A 136 <br />
                        Jundiaí - SP, CEP 13208-820 - Brasil <br>
                    </address>
                </div>
            </div>

            <div class="col-md-4">
                <div class="contact-phone">
                    <i class="ion-ios-telephone-outline"></i>
                    <h3>Fones</h3>
                    <p><a href="tel:+551139632253">+55 11 3963-2253</a></p>
                    <p><a href="tel:+5511958336424">+55 11 95833-6424</a></p>
                    <br />
                </div>
            </div>

            <div class="col-md-4">
                <div class="contact-email">
                    <i class="ion-ios-email-outline"></i>
                    <h3>E-mail</h3>
                    <p><a href="mailto:cotacao@allprotection.com.br">Cotação</a></p>
                    <br />
                </div>
            </div>

        </div>
            <form method="post" enctype="multipart/form-data" role="form" class="contactForm">
                <div class="form-row text-center">
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-6 text-center">
                        <h4><strong>Peça sua cotação abaixo:</strong></h4><br />
                        <h5 style="color:blue;">@TempData["EnviarMsg"]</h5>
                        <h5 style="color:red;">@TempData["ErroMsg"]</h5>
                    </div>
                    <div class="form-group col-md-3" style="text-align:right !important;">
                        
                    </div>
                </div>
                <div class="form-row text-center">
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-6">
                        <input type="text" name="nome" class="form-control" id="nome" placeholder="Nome" data-rule="minlen:4" data-msg="Digite pelo menos 4 caracteres!" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group col-md-3"></div>
                </div>
                <div class="form-row text-center">
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-6 text-center">
                        <input type="tel" name="celular" id="txtCelular" pattern="\([0-9]{2}\)[\s][0-9]{5}-[0-9]{4,4}"
                               class="form-control" placeholder="Celular" data-rule="minlen:11"
                               data-msg="Digite pelo menos 11 caracteres!" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group col-md-3"></div>
                </div>
                <div class="form-row text-center">
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" data-rule="email" data-msg="Por favor insira um e-maiil válido!" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group col-md-3"></div>
                </div>
                <div class="form-row text-center">
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="assunto" id="assunto" placeholder="Tipo de Seguro" data-rule="minlen:4" data-msg="Por favor digite o tipo de seguro!" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group col-md-3"></div>
                </div>
                <div class="form-row text-center">
                    <div class="form-group col-md-12">
                        <input id="btEnviar" class="btn btn-primary" type="submit" data-toggle="modal" data-target="#modalMsg" value="Enviar" />
                    </div>
                </div>
            </form>
    </div>

    <!-- Modal -->
        @if (TempData["mailMsg"] != null)
        {
            Html.RenderPartial("_ModalEnviarEmail", TempData["mailMsg"]);
        }
    <!-- end modal-->
    <!-- End Left contact -->

</section><!-- #contact -->
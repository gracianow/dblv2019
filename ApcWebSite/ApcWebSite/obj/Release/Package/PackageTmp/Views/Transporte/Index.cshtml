@{
    ViewData["Title"] = "Transporte";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!--==========================
     facts2 Section
   ============================-->

<section id="facts2" class="wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
    <div class="container">

        <header class="section-header">
            <br /><br /><br /><br />
            <h3><img src="~/Content/img/apc/logos/apc_logo_480x73.png" style="max-width:20%" /></h3>
            <h3>Seguro Transporte</h3>
            <h4 style="font-weight:bold !important; text-align:center !important;">
                O Seguro Transporte é a modaliodade que cobre suas operações de transporte dos riscos atuais para cargas e veículos
            </h4>
        </header>

        <div class="row counters">

            <div class="col-lg-4 col-8 text-center">
                <span data-toggle="counter-up" style="font-weight:bold !important; ">
                    100
                </span>
                <h4>Carga</h4>
                <p></p>
            </div>

            <div class="col-lg-4 col-8 text-center" style="font-weight:bold !important; ">
                <span data-toggle="counter-up">
                    200
                </span>
                <h4>Caminhões</h4>
                <p></p>
            </div>

            <div class="col-lg-4 col-8 text-center" style="font-weight:bold !important; ">
                <span data-toggle="counter-up">
                    300
                </span>
                <h4>VUCs</h4>
                <p></p>
            </div>
        </div>

        @*<div class="facts-img">
                <img src="~/Content/img/facts3.png" alt="" class="img-fluid">
            </div>*@

        <div class="col-md-12" style="text-align:center !important;">
                @Html.ActionLink("Peça já sua cotação para a All Protection!", "Index", "Cotacao", 
                null, new { @class = "btn btn-primary active" })
        </div>
        <br />
    </div>
</section>


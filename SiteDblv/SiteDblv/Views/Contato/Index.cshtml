
@model SiteDblv.Models.Contato

@{
    ViewBag.Title = "Contato";
}

<!-- Subhead
================================================== -->
<section id="subintro">
    <div class="container">
        <div class="row">
            <div class="span4">
                <h3><strong>@ViewBag.Title</strong></h3>
            </div>
            <div class="span8">
                <ul class="breadcrumb notop">
                    <li>
                        @Html.ActionLink("Início", "Index", "Home", null, new { @class = "navbar-brand" })
                        <span class="divider">/</span>
                    </li>
                    <li class="active">Contate-nos</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="maincontent">
    <div class="container">
        <div class="row">
            <div class="span4">
                <aside>
                    <div class="widget">
                        <h4>Get in touch with us</h4>
                        <ul>
                            <li>
                                <label><strong>Fone : </strong></label>
                                <p>
                                    +55 11 98554-6222
                                </p>
                            </li>
                            <li>
                                <label><strong>Email : </strong></label>
                                <p>
                                    contato@dobleve.com.br
                                </p>
                            </li>
                            <li>
                                <label><strong>Endereço: </strong></label>
                                <p>
                                    Rua Itirapina, 690
                                </p>
                            </li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h4>Nossas redes sociais</h4>
                        <ul class="social-links">
                            <li><a href="#" title="Twitter"><i class="icon-bg-light icon-twitter icon-circled icon-1x active"></i></a></li>
                            <li><a href="#" title="Facebook"><i class="icon-bg-light icon-facebook icon-circled icon-1x active"></i></a></li>
                            <li><a href="#" title="Google plus"><i class="icon-bg-light icon-google-plus icon-circled icon-1x active"></i></a></li>
                            <li><a href="#" title="Linkedin"><i class="icon-bg-light icon-linkedin icon-circled icon-1x active"></i></a></li>
                        </ul>
                    </div>
                </aside>
            </div>
            <div class="span8">
                <aside>
                    <div class="span8">
                        <h4><strong>Contato</strong></h4>
                    </div>
                    <div id="sendmessage">Sua mensagem foi enviada. Obrigado!</div>
                    <div id="errormessage"></div>
                    <fieldset>
                        <p>@Html.ValidationMessage("_FORM")</p>
                        <div style="width:100%">
                            @using (Html.BeginForm())
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="span8 form-group">
                                    @Html.LabelFor(model => model.Nome, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "col-md-10 form-control",
                                        @placeholder = "Nome", @style = "width:80%"}})
                                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="span4 form-group">
                                    @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", @placeholder = "E-mail" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.From)
                                    </div>
                                </div>

                                <div class="span4 form-group">
                                    @Html.LabelFor(model => model.Fone, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Fone, new { htmlAttributes = new { @class = "col-md-12 form-control", @placeholder = "Fone" } })
                                        @Html.ValidationMessageFor(model => model.Fone, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="span4 form-group">
                                    @Html.LabelFor(model => model.TipoMensagem, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("TipoMensagem", null, new { htmlAttributes = new { @class = "col-md-10 form-control", @placeholder = " Tipo de Mensagem" } })
                                    </div>
                                </div>
                                <div class="span4 form-group">
                                    @Html.LabelFor(model => model.Assunto, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("Assunto", null, new { htmlAttributes = new { @class = "col-md-10 form-control", @placeholder = "Assunto" } })
                                    </div>
                                </div>
                                <div class="span8 form-group">
                                    @Html.HiddenFor(model => model.DataMensagem)
                                    @Html.LabelFor(model => model.Mensagem, new { @class = "col-md-2 control-label" })
                                    <div class="">
                                        @Html.TextAreaFor(model => model.Mensagem, new { htmlAttributes = new { @class = "col-md-12 form-control", @placeholder = "Mensagem" } })
                                        <br />
                                    </div>
                                </div>
                            }
                            <div class="text-center">
                                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-color btn-rounded" }) &nbsp;
                                
                                <input type="submit" class="btn btn-large btn-info" value="Enviar" /> &nbsp;
                                @Html.ActionLink("Limpar", "Index", "Home", null, new { @class = "btn btn-color btn-rounded" })
                            </div>
                            <br />
                            <br />
                        </div>
                    </fieldset>
                </aside>
            </div>
        </div>
    </div>
</section>

